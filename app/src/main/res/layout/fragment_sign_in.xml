<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register.Fragments.SignInFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/close"
            android:layout_width="53dp"
            android:layout_height="57dp"
            android:padding="16dp"
            android:src="@mipmap/close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"></ImageView>

        <EditText
            android:id="@+id/sign_up_emaill"
            android:layout_width="329dp"
            android:layout_height="55dp"
            android:layout_marginTop="244dp"
            android:background="@drawable/rounded_input_type"
            android:drawableLeft="@mipmap/user"
            android:drawablePadding="20dp"
            android:textColor="@color/colorAccent"
            android:ems="20"
            android:hint="abhishek@gmail.com"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/sign_up_password"
            android:layout_width="329dp"
            android:layout_height="55dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/rounded_input_type"
            android:ems="10"
            android:hint="Password"
            android:paddingLeft="20dp"
            android:paddingEnd="20dp"
            android:inputType="textPassword"
            android:drawableLeft="@mipmap/padlock"
            android:drawablePadding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_up_emaill" />

        <TextView
            android:id="@+id/sign_in_forgot_password"
            android:layout_width="135dp"
            android:layout_height="23dp"
            android:text="Forgot Password ?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.148"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_up_password"
            app:layout_constraintVertical_bias="0.115" />

        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="329dp"
            android:layout_height="55dp"
            android:layout_marginTop="72dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="sans-serif-black"
            android:text="Log In"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_up_password" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="or"
            app:layout_constraintBottom_toTopOf="@+id/dont_have_a_account"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_in_button" />

        <TextView
            android:id="@+id/dont_have_a_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="44dp"
            android:text="Don't have a Account | Sign up !"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

