<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register.Fragments.SignUpFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:verticalScrollbarPosition="defaultPosition">


        <EditText
            android:id="@+id/sign_up_name"
            android:layout_width="329dp"
            android:layout_height="48dp"
            android:layout_marginTop="190dp"
            android:background="@drawable/sign_up_input_type"
            android:drawableLeft="@mipmap/user"
            android:drawablePadding="20dp"
            android:ems="10"
            android:hint="FullName"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintBottom_toTopOf="@+id/sign_up_emaill"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.55" />

        <EditText
            android:id="@+id/sign_up_emaill"
            android:layout_width="329dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/sign_up_input_type"
            android:ems="10"
            android:hint="abhishek@gmail.com"
            android:inputType="textEmailAddress"
            android:paddingLeft="60dp"
            app:layout_constraintBottom_toTopOf="@+id/sign_up_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_up_name" />

        <EditText
            android:id="@+id/sign_up_number"
            android:layout_width="329dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/sign_up_input_type"
            android:ems="10"
            android:hint="98XXXXXXXX"
            android:inputType="phone"
            android:paddingLeft="60dp"
            app:layout_constraintBottom_toTopOf="@+id/sign_up_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_up_emaill" />

        <EditText
            android:id="@+id/sign_up_password"
            android:layout_width="329dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/sign_up_input_type"
            android:drawableLeft="@mipmap/padlock"
            android:drawablePadding="20dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintBottom_toTopOf="@+id/sign_up_confirm_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_up_number" />

        <EditText
            android:id="@+id/sign_up_confirm_password"
            android:layout_width="329dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="71dp"
            android:background="@drawable/sign_up_input_type"
            android:drawableLeft="@mipmap/padlock"
            android:drawablePadding="20dp"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintBottom_toTopOf="@+id/sign_up_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_up_password" />

        <Button
            android:id="@+id/sign_up_button"
            android:layout_width="329dp"
            android:layout_height="49dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/sign_up_button"
            android:enabled="false"
            android:fontFamily="sans-serif-black"
            android:text="Get Started"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="30dp"
            app:layout_constraintBottom_toTopOf="@+id/already_have_account"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/already_have_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Already have a Account | Log in ! to the account"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_in_button"
            app:layout_constraintVertical_bias="0.485" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_marginStart="87dp"
            android:layout_marginTop="67dp"
            android:layout_marginEnd="87dp"
            android:layout_marginBottom="10dp"
            android:text="Sign Up Now!"
            android:textColor="@color/colorPrimary"
            android:textSize="40dp"
            app:layout_constraintBottom_toTopOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="329dp"
            android:layout_height="38dp"
            android:layout_marginStart="41dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="41dp"
            android:layout_marginBottom="16dp"
            android:text="Provide your information for amazing gifts and discounts"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/sign_up_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>