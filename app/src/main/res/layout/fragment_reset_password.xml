<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword.ResetPasswordFragment">

    <!-- TODO: Update blank fragment layout -->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="138dp"
            android:layout_height="132dp"
            android:src="@drawable/download"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.468"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.589" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="262dp"
            android:layout_height="64dp"
            android:layout_marginBottom="36dp"
            android:text="Forgot Password ?"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30dp"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="354dp"
            android:layout_height="68dp"
            android:layout_marginBottom="44dp"
            android:text="Don't worry you are one step away to reset your password"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/reset_email"
            tools:layout_editor_absoluteX="34dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="122dp"
            android:layout_height="26dp"
            android:enabled="false"
            app:layout_constraintBottom_toBottomOf="@+id/back_to_sign_in_page"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.779" />

        <TextView
            android:id="@+id/back_to_sign_in_page"
            android:layout_width="90dp"
            android:layout_height="27dp"
            android:text="&lt; &lt; Go back"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reset_password_button" />

        <EditText
            android:id="@+id/reset_email"
            android:layout_width="308dp"
            android:layout_height="58dp"
            android:layout_marginBottom="76dp"
            android:background="@drawable/rounded_input_type"
            android:drawableLeft="@mipmap/user"
            android:drawablePadding="20dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintBottom_toTopOf="@+id/reset_password_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.572"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/reset_password_button"
            android:layout_width="324dp"
            android:layout_height="58dp"
            android:layout_marginBottom="96dp"
            android:background="@drawable/rounded_button"
            android:enabled="false"
            android:fontFamily="sans-serif-black"
            android:text="Reset"
            android:textColor="@color/colorAccent"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>